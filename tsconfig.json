{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "expect": ["node_modules/expect"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"],
}